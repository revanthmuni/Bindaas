<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Setting_F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.tachyon.bindaas.Settings.Setting_F">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?layoutBackgroundColor">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?layoutBackgroundColor"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/d_bottom_gray_line">

                <ImageButton
                    android:id="@+id/Goback"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_back"
                    android:tint="?textColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="Preferences"
                    android:textColor="?textColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/d_bottom_gray_line"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/auto_scroll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Auto Scroll"
                    android:textColor="?textColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <Switch
                    android:id="@+id/auto_scroll_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:checked="true" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d_bottom_gray_line"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


                <TextView
                    android:id="@+id/theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Night Mode"
                    android:textColor="?textColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/theme_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:checked="true" />

                <RadioGroup
                    android:id="@+id/themes_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:id="@+id/white_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="White"
                        android:textColor="?textColor"
                        android:textSize="15dp"
                        android:theme="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/black_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Black"
                        android:textColor="?textColor"
                        android:textSize="15dp"
                        android:theme="@style/RadioButton" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d_bottom_gray_line"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout44">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/d_bottom_gray_line"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/who_can_msg_arrow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_down_arrow"
                        android:visibility="gone" />

                    <Switch
                        android:id="@+id/any_one_can_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:checked="true"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/terms_of_use_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/d_bottom_gray_line"
                        android:padding="15dp"
                        android:text="Who can message me"
                        android:textColor="?textColor"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:layout_conversion_absoluteHeight="50dp"
                        tools:layout_conversion_absoluteWidth="392dp"
                        tools:layout_editor_absoluteX="10dp"
                        tools:layout_editor_absoluteY="132dp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/who_can_msg_rbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:id="@+id/no_one_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No one"
                        android:textColor="?textColor"
                        android:textSize="15dp"
                        android:theme="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/m_friends_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Only Mutual Followers"
                        android:textColor="?textColor"
                        android:textSize="15dp"
                        android:theme="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/anyone_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Anyone"
                        android:textColor="?textColor"
                        android:textSize="15dp"
                        android:theme="@style/RadioButton" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d_bottom_gray_line"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/d_bottom_gray_line"
                    android:orientation="horizontal">


                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:checked="true"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/d_bottom_gray_line"
                        android:padding="15dp"
                        android:text="Who can Tag me"
                        android:textColor="?textColor"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:layout_conversion_absoluteHeight="50dp"
                        tools:layout_conversion_absoluteWidth="392dp"
                        tools:layout_editor_absoluteX="10dp"
                        tools:layout_editor_absoluteY="132dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/ic_down_arrow"/>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/who_can_tag_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:id="@+id/no_one_tag_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No one"
                        android:textColor="?textColor"
                        android:textSize="15dp"
                        android:theme="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/only_mutual_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Only Mutual Followers"
                        android:textColor="?textColor"
                        android:textSize="15dp"
                        android:theme="@style/RadioButton" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d_bottom_gray_line"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout10">


                <TextView
                    android:id="@+id/show_preview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Show Video Preview"
                    android:textColor="?textColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/show_preview_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:checked="true" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d_bottom_gray_line"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/d_bottom_gray_line"
                    android:orientation="horizontal">

                    <!--<Spinner
                    android:id="@+id/lang_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:entries="@array/languages"
                    android:layout_weight="1"
                    android:checked="true" />-->


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="15dp"
                        android:text="Language"
                        android:textColor="?textColor"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:layout_conversion_absoluteHeight="50dp"
                        tools:layout_conversion_absoluteWidth="392dp"
                        tools:layout_editor_absoluteX="10dp"
                        tools:layout_editor_absoluteY="132dp" />

                    <ImageView
                        android:id="@+id/right_arrow"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_next"
                        android:tint="?textColor" />
                </LinearLayout>


                <TextView
                    android:id="@+id/selected_languages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Selected Languages are: "
                    android:textColor="?textColor" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</FrameLayout>
