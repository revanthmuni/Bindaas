<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="?layoutBackgroundColor"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tachyon.bindaas.Profile.Edit_Profile_F">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="?layoutBackgroundColor">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="?textOppsiteColor">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/d_bottom_gray_line">

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitStart"
                    android:id="@+id/Goback"
                    android:tint="?textColor"
                    android:src="@drawable/ic_back"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:textColor="?textColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:id="@+id/save_btn"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/redcolor"/>



            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_below="@+id/toolbar">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal">


              <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_image"
                android:src="@drawable/profile_image_placeholder"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/upload_pic_btn"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_camera_icon"/>

            </RelativeLayout>




              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:minHeight="50dp"
                  android:layout_marginTop="20dp">

                  <ImageView
                      android:layout_width="18dp"
                      android:layout_height="18dp"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="5dp"
                      android:scaleType="fitCenter"
                      android:src="@drawable/ic_profile_gray"/>

                  <EditText
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Username"
                      android:textSize="14dp"
                      android:inputType=""
                      android:layout_centerVertical="true"
                      android:id="@+id/username_edit"
                      android:textColorHint="@color/graycolor"
                      android:textColor="?textColor"
                      android:layout_marginStart="25dp"
                      android:backgroundTint="@color/transparent"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:layout_marginTop="49dp"
                      android:background="@color/graycolor"
                      android:layout_marginStart="25dp"
                      />

              </RelativeLayout>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="50dp"
                      android:layout_weight="1"
                      android:layout_marginTop="20dp">

                      <ImageView
                          android:layout_width="18dp"
                          android:layout_height="18dp"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="5dp"
                          android:id="@+id/profile_icon"
                          android:scaleType="fitCenter"
                          android:src="@drawable/ic_profile_gray"/>

                      <EditText
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:hint="First name"
                          android:textSize="14dp"
                          android:id="@+id/firstname_edit"
                          android:textColorHint="@color/graycolor"
                          android:layout_toRightOf="@+id/profile_icon"
                          android:layout_marginLeft="10dp"
                          android:textColor="?textColor"
                          android:backgroundTint="@color/transparent"/>

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="0.5dp"
                          android:layout_marginTop="49dp"
                          android:layout_marginLeft="12dp"
                          android:background="@color/graycolor"
                          android:layout_toRightOf="@+id/profile_icon"/>

                  </RelativeLayout>


                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="50dp"
                      android:layout_weight="1"
                      android:layout_marginTop="20dp">

                      <ImageView
                          android:layout_width="18dp"
                          android:layout_height="18dp"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="5dp"
                          android:id="@+id/profile_icon2"
                          android:scaleType="fitCenter"
                          android:src="@drawable/ic_profile_gray"/>

                      <EditText
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:hint="Last name"
                          android:textSize="14dp"
                          android:id="@+id/lastname_edit"
                          android:textColorHint="@color/graycolor"
                          android:layout_toRightOf="@+id/profile_icon2"
                          android:layout_marginLeft="10dp"
                          android:textColor="?textColor"
                          android:backgroundTint="@color/transparent"/>

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="0.5dp"
                          android:layout_marginTop="49dp"
                          android:layout_marginLeft="12dp"
                          android:background="@color/graycolor"
                          android:layout_toRightOf="@+id/profile_icon2"/>

                  </RelativeLayout>

              </LinearLayout>




              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="20dp">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Gender"
                      android:textSize="16dp"
                      android:padding="10dp"
                      android:elevation="0.5dp"
                      android:textStyle="italic"
                      android:background="@drawable/roundcorner_green_background_v1"
                      android:textColor="@color/white"
                      />


                  <RadioGroup
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="10dp"
                      android:id="@+id/genderGroup"
                      android:paddingLeft="10dp">
                      <RadioButton
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Male"
                          android:textSize="15dp"
                          android:id="@+id/male_btn"
                          android:layout_weight="1"
                          android:theme="@style/RadioButton"
                          android:textColor="?textColor"/>
                      <RadioButton
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Female"
                          android:textSize="15dp"
                          android:layout_weight="1"
                          android:id="@+id/female_btn"
                          android:theme="@style/RadioButton"
                          android:textColor="?textColor"/>
                      <RadioButton
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="Prefer not to say"
                          android:textSize="15dp"
                          android:id="@+id/others_btn"
                          android:theme="@style/RadioButton"
                          android:textColor="?textColor"/>
                  </RadioGroup>

              </LinearLayout>



              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Me"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:elevation="0.5dp"
                    android:textStyle="italic"
                    android:background="@drawable/roundcorner_green_background_v1"
                    android:textColor="?textOppsiteColor"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:hint="Your Bio"
                    android:background="@drawable/editfield_releative_border"
                    android:paddingTop="5dp"
                    android:paddingLeft="15dp"
                    android:textSize="15dp"
                    android:maxLength="100"
                    android:imeOptions="flagNavigateNext"
                    android:nextFocusForward="@+id/jobtitle_edit"
                    android:id="@+id/user_bio_edit"
                    android:textColorHint="@color/gainsboro"
                    android:textColor="?dimGray"
                    android:backgroundTint="@color/transparent"/>
            </LinearLayout>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Social Profiles"
                  android:textSize="16dp"
                  android:padding="10dp"
                  android:elevation="0.5dp"
                  android:textStyle="italic"
                  android:background="@drawable/roundcorner_green_background_v1"
                  android:textColor="?textOppsiteColor"/>

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/linearLayout8"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="10">

                  <EditText
                      android:id="@+id/fb_link"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="8dp"
                      android:backgroundTint="@color/transparent"
                      android:hint="username"
                      android:textColor="?textColor"
                      android:textColorHint="@color/graycolor"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toEndOf="@+id/textView5"
                      app:layout_constraintTop_toTopOf="parent" />

                  <ImageView
                      android:id="@+id/imageView"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/ic_facebook"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

                  <TextView
                      android:id="@+id/textView5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="8dp"
                      android:gravity="center"
                      android:text="https://www.facebook.com/"
                      android:textColor="?dimGray"
                      app:layout_constraintBottom_toBottomOf="@+id/imageView"
                      app:layout_constraintStart_toEndOf="@+id/imageView"
                      app:layout_constraintTop_toTopOf="@+id/imageView" />
              </androidx.constraintlayout.widget.ConstraintLayout>

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/linearLayout9"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <EditText
                      android:id="@+id/insta_link"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="8dp"
                      android:hint="username"
                      android:textColor="?textColor"
                      android:textColorHint="@color/graycolor"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toEndOf="@+id/textView6"
                      app:layout_constraintTop_toTopOf="parent" />

                  <ImageView
                      android:id="@+id/imageView3"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/ic_insta"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

                  <TextView
                      android:id="@+id/textView6"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="8dp"
                      android:gravity="center"
                      android:text="https://www.instagram.com/"
                      android:textColor="?dimGray"
                      app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                      app:layout_constraintStart_toEndOf="@+id/imageView3"
                      app:layout_constraintTop_toTopOf="@+id/imageView3" />
              </androidx.constraintlayout.widget.ConstraintLayout>


          </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</FrameLayout>
