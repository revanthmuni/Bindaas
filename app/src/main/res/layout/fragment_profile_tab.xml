<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Profile_F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.Profile_Tab_F">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/create_popup_layout"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="68dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/popup_background"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Tap + to create\n your first short video"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/white"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/d_bottom_gray_line">

                    <FrameLayout
                        android:id="@+id/notification_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/refresh"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/myImageView1"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_notification_red" />

                        <TextView
                            android:id="@+id/tvUserNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/myImageView1"
                            android:layout_alignTop="@+id/myImageView1"
                            android:layout_alignRight="@+id/myImageView1"
                            android:layout_alignBottom="@+id/myImageView1"
                            android:layout_gravity="right"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <ImageButton
                        android:id="@+id/setting_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_black_dots"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/refresh"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_refresh_black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/setting_btn"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="UserName"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/notification_view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bannerad"
                android:layout_below="@+id/toolbar"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants">


                    <RelativeLayout
                        android:id="@+id/tabs_main_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/top_layout"
                        android:orientation="vertical">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/tabs">

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tabs"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                app:tabGravity="fill"
                                app:tabIndicatorColor="@color/colorProfileTabSelector"
                                app:tabMode="fixed"
                                app:tabPaddingEnd="0dp"
                                app:tabPaddingStart="0dp"
                                app:tabSelectedTextColor="@color/black"
                                app:tabTextColor="@color/dimgray" />
                        </androidx.viewpager.widget.ViewPager>

                    </RelativeLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/edit_profile_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/themecolor"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/userInfoBarrier" />

                        <androidx.constraintlayout.widget.Barrier
                            android:id="@+id/userInfoBarrier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:barrierDirection="bottom"
                            app:constraint_referenced_ids="userInformationLayout,clUserImageLayout"
                            tools:layout_editor_absoluteY="136dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/edit_profile_btn">

                            <ImageView
                                android:id="@+id/bio_image2"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="16dp"
                                android:src="@drawable/ic_bio" />

                            <TextView
                                android:id="@+id/bio_text2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="7"
                                android:maxLines="5"
                                android:text="Hi i'm user"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/fb_image2"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_facebook" />

                            <ImageView
                                android:id="@+id/insta_image2"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:layout_marginRight="16dp"
                                android:src="@drawable/insta_img" />
                        </LinearLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/userInformationLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/clUserImageLayout"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/linearLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <LinearLayout
                                    android:id="@+id/following_layout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical"
                                    app:layout_constraintEnd_toStartOf="@+id/fans_layout"
                                    app:layout_constraintLeft_toLeftOf="parent">

                                    <TextView
                                        android:id="@+id/follow_count_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="2dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="2dp"
                                        android:text="0"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="5dp"
                                        android:text="Following"
                                        android:textColor="@color/darkgray"
                                        android:textSize="13dp"
                                        android:textStyle="bold" />
                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/fans_layout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/following_layout">

                                    <TextView
                                        android:id="@+id/fan_count_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="2dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="2dp"
                                        android:text="0"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="5dp"
                                        android:text="Followers"
                                        android:textColor="@color/darkgray"
                                        android:textSize="13dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                                <LinearLayout
                                    android:id="@+id/likesLayout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/heart_count_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="2dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="2dp"
                                        android:text="0"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="5dp"
                                        android:text="Likes"
                                        android:textColor="@color/darkgray"
                                        android:textSize="13dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/draft_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical"
                                    android:visibility="visible"
                                    tools:layout_editor_absoluteX="147dp">

                                    <TextView
                                        android:id="@+id/draft_count_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="2dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="2dp"
                                        android:text="0"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="5dp"
                                        android:text="Draft"
                                        android:textColor="@color/darkgray"
                                        android:textSize="13dp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clUserImageLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toStartOf="@+id/userInformationLayout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/constraintLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="24dp"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/cardView">

                                <!--<FrameLayout
                                    android:id="@+id/notification_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/myImageView1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_notification_red" />

                                    <TextView
                                        android:id="@+id/tvUserNotifications"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignLeft="@+id/myImageView1"
                                        android:layout_alignTop="@+id/myImageView1"
                                        android:layout_alignRight="@+id/myImageView1"
                                        android:layout_alignBottom="@+id/myImageView1"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:text="(1)"
                                        android:textColor="#000000" />
                                </FrameLayout>-->
                                <!-- <TextView
                                     android:id="@+id/tvUserNotifications"
                                     android:layout_width="55dp"
                                     android:layout_height="55dp"
                                     android:drawableRight="@drawable/ic_notification_red"
                                     android:drawablePadding="8dp"
                                     android:gravity="end|center_vertical"
                                     android:padding="15dp"
                                     android:textColor="@color/black"
                                     android:textStyle="bold" />
 -->

                                <!-- <TextView
                                     android:id="@+id/tvUserChat"
                                     android:layout_width="65dp"
                                     android:layout_height="55dp"
                                     android:drawableEnd="@drawable/ic_send_black"
                                     android:drawablePadding="8dp"
                                     android:gravity="center"
                                     android:padding="15dp"
                                     android:textColor="@color/black"
                                     android:textStyle="bold" />-->
                                <FrameLayout
                                    android:id="@+id/inbox_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/myImageView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="15dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_message" />

                                    <TextView
                                        android:id="@+id/tvUserChat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignLeft="@+id/myImageView"
                                        android:layout_alignTop="@+id/myImageView"
                                        android:layout_alignRight="@+id/myImageView"
                                        android:layout_alignBottom="@+id/myImageView"
                                        android:layout_gravity="right"
                                        android:layout_margin="1dp"
                                        android:gravity="center"
                                        android:text="(1)"
                                        android:textColor="#000000" />
                                </FrameLayout>
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/rlUserImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/varified_btn"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="2dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_verified"
                                    android:visibility="gone" />

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/user_image"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/profile_image_placeholder" />
                            </RelativeLayout>


                            <TextView
                                android:id="@+id/username2_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:text="UserName"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/rlUserImage" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:visibility="gone"
                                app:cardBackgroundColor="@color/lightgraycolor"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/username2_txt">

                                <TextView
                                    android:id="@+id/video_count_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="5dp"
                                    android:text="0 Video"
                                    android:textColor="@color/dimgray"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>


        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</FrameLayout>