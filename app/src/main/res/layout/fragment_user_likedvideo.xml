<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?layoutBackgroundColor"
    tools:context="com.tachyon.bindaas.Profile.UserVideos.UserVideo_F">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/recylerview"
      android:scrollingCache="true"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/no_data_layout"
        android:paddingTop="50dp"
        android:visibility="gone"
        android:background="?textOppsiteColor">

      <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_below="@+id/img_no_job"
          android:layout_centerHorizontal="true"
          android:text="Whoops!"
          android:textColor="?dimGray"
          android:id="@+id/whoops"
          android:textSize="22sp"/>

      <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_below="@+id/whoops"
          android:layout_centerHorizontal="true"
          android:gravity="center"
          android:textColor="?dimGray"
          android:layout_marginLeft="55dp"
          android:layout_marginRight="55dp"
          android:text="@string/no_liked_videos"
          android:textSize="14sp"/>

    </RelativeLayout>


  </RelativeLayout>


</FrameLayout>
